model User {
  id        String   @id @default(cuid()) 
  name      String?
  email     String?  @unique
  password  String?
  posts     Post[]
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

enum Role {
  USER
  ADMIN
}